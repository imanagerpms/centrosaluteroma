# Pagina predefinita: apri index.php quando si visita la root (centrosaluteroma.it)
DirectoryIndex index.php index.html

# MIME type per i video (necessario su alcuni hosting per la riproduzione)
<IfModule mod_mime.c>
  AddType video/mp4 .mp4
</IfModule>

# Redirect vecchi link .html e URL puliti per branche
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ index.php [R=301,L]
  RewriteRule ^privacy\.html$ privacy.php [R=301,L]
  # URL puliti: /branche -> branche.php, /branche/fisioterapia -> branca.php?b=fisioterapia
  RewriteRule ^branche/?$ branche.php [L]
  RewriteRule ^branche/([a-z0-9-]+)/?$ branca.php?b=$1 [L,QSA]
</IfModule>
